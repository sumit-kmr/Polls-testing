<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_medium"
                    android:text="Registered Number"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/txtReg2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="9999999999"
                    android:textSize="16sp"
                    android:layout_below="@id/txtReg2"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:id="@+id/regNo"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_medium"
                    android:text="Paytm Number"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/txtPaytm"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="9999999999"
                    android:textSize="16sp"
                    android:layout_below="@id/txtPaytm"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:id="@+id/paytmNo"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pen"
                    android:layout_toRightOf="@id/paytmNo"
                    android:layout_below="@id/txtPaytm"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/imgEditPaytmNo"
                    android:background="@drawable/share_background"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_medium"
                    android:text="Amount earned"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/txtAmt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Rs. 0"
                    android:textSize="16sp"
                    android:layout_below="@id/txtAmt"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:id="@+id/amountEarned"/>
                <Button
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ok_button_background"
                    android:layout_alignParentRight="true"
                    android:text="Reedem 100"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:enabled="false"
                    android:foreground="#7fff"
                    android:textAllCaps="false"
                    android:id="@+id/btnReedem"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_medium"
                    android:text="Refer and earn"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/txtReferAndEarn"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="You and your friend both get 5 coin"
                    android:textSize="15sp"
                    android:layout_below="@id/txtReferAndEarn"
                    android:layout_alignParentBottom="true"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:id="@+id/referDesc"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imgShare"
                    android:src="@drawable/share"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share_background"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="148dp"
                    android:layout_height="45dp"
                    android:background="@drawable/ok_button_background"
                    android:layout_centerInParent="true"
                    android:text="Enter refer Id"
                    android:textAllCaps="false"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="5dp"
                    android:id="@+id/btnRefer"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="20dp">
                <Button
                    android:layout_width="148dp"
                    android:layout_height="45dp"
                    android:background="@drawable/ok_button_background"
                    android:layout_alignParentStart="true"
                    android:text="Share app"
                    android:textAllCaps="false"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btnShare"/>
                <Button
                    android:layout_width="148dp"
                    android:layout_height="45dp"
                    android:background="@drawable/ok_button_background"
                    android:layout_alignParentEnd="true"
                    android:text="Rate us"
                    android:textAllCaps="false"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="5dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/btnRate"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>